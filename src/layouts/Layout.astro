---
import Header from "../components/Header.astro"
import Content from "../components/Content.astro"
import "../styles/style.css"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Mardoqueo Zotelo</title>
  </head>
  <body class="relative bg-neutral-950">

    <!-- Fondo absoluto detrás del contenido -->
    <div class="absolute inset-0 z-[-1] w-full h-full bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>

    <!-- Contenedor principal -->
    <main class="relative flex flex-col md:flex-row h-auto md:h-screen overflow-y-auto md:overflow-hidden">
      <!-- Header: scrollea en móvil -->
      <section class="w-full md:w-1/2 px-6 pt-16 md:pt-28 md:pl-48">
        <Header />
      </section>

      <!-- Content: scrollea en desktop -->
      <section class="w-full md:w-1/2 px-6 md:pr-28 pt-16 md:pt-36 md:h-screen md:overflow-y-auto scroll-smooth">
        <Content />
      </section>
    </main>

  </body>
</html>
