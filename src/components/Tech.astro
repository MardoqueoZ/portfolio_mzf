---
import Python from "./tech/Python.astro";
import Js from "./tech/Js.astro"
import Django from "./tech/Django.astro"
import Laravel from "./tech/Laravel.astro"
import React from "./tech/React.astro"
import Astro0 from "./tech/Astro0.astro"
import Tailwind from "./tech/Tailwind.astro"
import Bootstrap from "./tech/Bootstrap.astro"
import PostgreSQL from "./tech/PostgreSQL.astro"
import MySQL from "./tech/MySQL.astro"
import Code from "./icon/Code.astro"

let tech = [
    {
        title: "Python",
        icon: Python,
    },
    {
        title: "JavaScript",
        icon: Js,
    },
    {
        title: "Django",
        icon: Django,
    },
    {
        title: "Laravel",
        icon: Laravel,
    },
    {
        title: "React.JS",
        icon: React,
    },
    {
        title: "Astro",
        icon: Astro0,
    },
    {
        title: "Tailwind",
        icon: Tailwind
    },
    {
        title: "Bootstrap",
        icon: Bootstrap
    },
    {
        title: "PostgreSQL",
        icon: PostgreSQL
    },
    {
        title: "MySQL",
        icon: MySQL,
    }
];
---


<div class="flex items-center gap-3 mb-10">
    <Code class="text-yellow-400 md:w-10 md:h-10" />
    <h2 class="text-yellow-400 text-2xl md:text-4xl font-semibold">Tecnolog√≠as</h2>
</div>

<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    {tech.map((item) => (
        <div class="group flex flex-col items-center text-center p-6 rounded-2xl border border-white/10 bg-white/5 hover:bg-white/10 hover:border-white/30 transition-all duration-300">
            <item.icon class="w-10 h-10 mb-4 group-hover:scale-110 transition-transform" />
            <span class="text-white font-semibold text-sm group-hover:text-white/90">{item.title}</span>
        </div>
    ))}
</div>

