---
import Work from "./icon/Work.astro"

const experiences = [
  {
    role: "Desarrollador FullStack",
    company: "Tech Solutions SA",
    link: "https://techsolutions.com",
    date: "Ene 2023 — Actualidad",
    tasks: [
      "Desarrollo de sistemas internos en Django y React.",
      "Integración de APIs REST y optimización de consultas SQL.",
      "Colaboración en equipo ágil bajo metodología Scrum.",
    ],
  },
  {
    role: "Frontend Developer",
    company: "Creativa Studio",
    link: null,
    date: "Ago 2021 — Dic 2022",
    tasks: [
      "Diseño y desarrollo de interfaces responsivas con Tailwind CSS.",
      "Mantenimiento de sitios web para clientes de e-commerce.",
      "Implementación de animaciones e interactividad con JavaScript.",
    ],
  },
]
---

<div class="flex items-center gap-3 mb-10">
    <Work class="text-yellow-400 w-10 h-10" />
    <h2 class="text-yellow-400 text-4xl font-semibold">Experiencia</h2>
</div>

<div class="grid gap-6">
  {experiences.map((exp) => (
    <div class="rounded-2xl bg-neutral-900/50 border border-neutral-700 p-6 shadow-xl transition hover:scale-[1.02] hover:shadow-2xl duration-300">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-2">
        <h3 class="text-2xl font-semibold text-slate-100">
          {exp.role}{" "}
          <span class="text-yellow-400">
            @{exp.link ? (
              <a href={exp.link} target="_blank" rel="noopener noreferrer" class="hover:underline">
                {exp.company}
              </a>
            ) : (
              exp.company
            )}
          </span>
        </h3>
        <span class="text-sm text-slate-400 mt-1 sm:mt-0">{exp.date}</span>
      </div>
      <ul class="list-disc list-inside text-slate-300 mt-3 space-y-2 text-base">
        {exp.tasks.map((task) => (
          <li>{task}</li>
        ))}
      </ul>
    </div>
  ))}
</div>
